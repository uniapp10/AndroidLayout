<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mine">
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".com.MineActivity"
            android:label="@string/title_activity_mine">
        </activity>
        <activity android:name=".com.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".com.LayoutActivity"
            android:label="@string/title_activity_layout">
        </activity>

        <activity android:name=".com.ItemsActivity"
            android:label="四大组件">
        </activity>
        <activity android:name=".com.ItemsDetail.AcitivityItem"
            android:label="TrueActivity">
        </activity>

        <activity android:name=".com.ItemsDetail.ServiceActivity"
            android:label="ServiceActivity">
        </activity>

        <service android:name=".com.ItemsDetail.DownloadService"
            android:exported="true"
            android:enabled="true">
        </service>

        <activity android:name=".com.ItemsDetail.ContentProviderItem"
            android:label="ContentProvider">

        </activity>
        <activity android:name=".com.ItemsDetail.ContentProviderCustomActivity"
            android:label="创建ContentProvider">

        </activity>
        
        <provider
            android:authorities="com.jujin.mine"
            android:name=".com.ItemsDetail.ContentProviderCustom"
            android:enabled="true"
            android:exported="true">

        </provider>

        <activity android:name=".com.ItemsDetail.BroadcastActivity"
            android:label="大喇叭广播">

        </activity>
    </application>
</manifest>